# Build stage
FROM node:20-alpine AS builder
WORKDIR /app

# Install dependencies
COPY src/stub-auth/package*.json ./
RUN npm ci

# Build TypeScript sources
COPY src/stub-auth/tsconfig.json ./
COPY src/stub-auth/src ./src
RUN npm run build

# Runtime stage
FROM node:20-alpine
WORKDIR /app
ENV NODE_ENV=production

COPY src/stub-auth/package*.json ./
RUN npm ci --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 3000
CMD ["node", "--enable-source-maps", "dist/index.js"]
